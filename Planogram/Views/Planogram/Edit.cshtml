<script type='text/template' id='browse-placed-display-template'>
    <div id="remove-display" class="icon clickable my-icons-remove pull-right"></div>
    <div class="icon my-icons-browse"></div>
    <p><%- Name %></p>
        <ul class="assignedPlaylists">
        <% _.each(assignedPlaylists, function(playlist) { %>
            <li id=<%- playlist.Id %> class="assigned-playlist">
            <div class="pull-left"><%- playlist.DisplayName %></div>
            <div class="remove icon clickable my-icons-remove pull-left"></div>
            <div class="clearing"></div>
            </li><% }); %>
        </ul>
</script>
