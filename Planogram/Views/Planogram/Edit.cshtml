@{
    ViewBag.Title = "Index";
}

@section Header {
    <link rel="stylesheet" type="text/css" href="/Content/css/views/planogram/edit.css" />
}

@section Scripts
{
    <script type='text/javascript'>
        var STORE_ID = '@ViewBag.StoreId';
        Bootstrap.load([
            "@@/Content/js/views/planogram/edit.js"
        ]);
    </script>
}


<div class="row">
    <div id="sidebar" class="span3" style="width: 255px">
        <div class="navbar">
            <div class="navbar-inner">
                <ul id="tabs" class="nav nav-pills">
                    <li class="active"><a href="#displays-tab">Displays</a></li>
                    <li><a href="#playlists-tab">Playlists</a></li>
                </ul>
            </div>
        </div>
        <div class="tab-content" style="overflow: visible">
            <div id="displays-tab" class="tab-pane active">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="type-column"></th>
                            <th class="name-column">Name</th>
                        </tr>
                    </thead>
                    <tbody id="displayContainer"></tbody>
                </table>
            </div>
            <div id="playlists-tab"class="tab-pane" >
                <table class="table">
                    <thead>
                        <tr>
                            <th class="type-column"></th>
                            <th class="name-column">Name</th>
                        </tr>
                    </thead>
                    <tbody id="playlistContainer"></tbody>
                </table>
            </div>
        </div>
    </div>
    <div id="blueprint" class="span9">
        
    </div>
</div>

 @section Dialogs
 {
     <div id="display-details" style="display:none">
         <div class="modal-header"><h3>Modal header</h3></div>
         <div class="modal-body"><p>This is one fine body</p></div>
        <div class="modal-footer">
            <a href="#" class="btn close-details">Close</a>
        </div>
     </div>
 }

<script type='text/template' id='browse-display-template'>
    <td class="type-column"><div class="icon my-icons-browse"></div></td>
    <td class="name-column">
        <p><%- Name %></p>       
    </td>
</script>
<script type='text/template' id='adplay-display-template'>
