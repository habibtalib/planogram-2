@{
    ViewBag.Title = "Index";
}

@section Header {
    <link rel="stylesheet" type="text/css" href="/Content/css/views/planogram/edit.css" />
}

@section Scripts
{
    <script type='text/javascript'>
        var STORE_ID = '@ViewBag.StoreId';
        Bootstrap.load([
            "@@/Content/js/views/planogram/edit.js"
        ]);
    </script>
}

<div class="row">
    <div id="sidebar" class="span3">
        
        <h3>Displays</h3>
        <div id="displayContainer">
        </div>
        <h3>Playlists</h3>
        <div id="playlistContainer"></div>
    </div>
    <div id="blueprint" class="span9">
        
    </div>
</div>

<script type='text/template' id='browse-display-template'>
    <div class="icon my-icons-browse"></div>
    <p><%- Name %></p>
    <% if (playlistsVisible) { %>  
        <ul class="assignedPlaylists">
        <% _.each(assignedPlaylists, function(playlist) { %>
            <li id=<%- playlist.Id %> class="assigned-playlist"><%- playlist.DisplayName %>
                <span class="remove clickable">x</span>
            </li><% }); %>
        </ul>
    <% } %>
</script>
